{
    "compilerOptions": {
        "allowJs": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "strict": true,
        "isolatedModules": true,
        "target": "ESNext",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": false,
        "noEmit": true,
        "paths": {
            "@/*": ["../../resources/js/*"]
        },
        "baseUrl": "./",
    },
    "include": [
        ".eslintrc.cjs",
        "Resources/js/**/*.js",
        "Resources/js/**/*.ts",
        "Resources/js/**/*.tsx",
        "Resources/js/**/*.d.ts",
        "Tests/**/*.js",
        "Tests/**/*.ts",
        "Tests/**/*.tsx",
        "Tests/**/*.d.ts",
        "../../resources/js/types/global.d.ts"
    ]
}
